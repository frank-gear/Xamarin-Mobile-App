<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971FrankHaltom.Views.EditTermPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Term Title:"/>
                <Entry x:Name="Termtitle" Placeholder="" />
                <Label Text="Start Date:"/>
                <DatePicker x:Name="StartDate"/>
                <Label Text="End Date:"/>
                <DatePicker x:Name="EndDate"/>
                <Label Text="Course1:"/>
                <Picker x:Name="Course1" Title="" />
                <Label Text="Course2:"/>
                <Picker x:Name="Course2" Title="" />
                <Label Text="Course3:"/>
                <Picker x:Name="Course3" Title="" />
                <Label Text="Course4:"/>
                <Picker x:Name="Course4" Title="" />
                <Label Text="Course5:"/>
                <Picker x:Name="Course5" Title="" />
                <Label Text="Course6:"/>
                <Picker x:Name="Course6" Title="" />
                <Button x:Name="SaveBtn" Text="Save" />


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>